<% content_for :body_content_title do %>
  <%= @redirect.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @redirect.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @redirect.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="redirects">
      <% @redirects.each do |redirect| %>
        <li>
          <%= link_to redirect.title, refinery.redirects_redirect_path(redirect) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
