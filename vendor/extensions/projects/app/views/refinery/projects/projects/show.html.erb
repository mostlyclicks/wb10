<% content_for :body_content_title do %>
  <%= @project.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @project.title %>
    </p>
  </section>
  <section>
    <h1>Project Status</h1>
    <p>
      <%=raw @project.project_status %>
    </p>
  </section>
  <section>
    <h1>Pdf Link</h1>
    <p>
      <% if @project.pdf_link.present? %>
        <%= link_to 'pdf_link', @project.pdf_link.url %>
      <% else %>
        pdf_link
      <% end %>
    </p>
  </section>
  <section>
    <h1>Hero Image</h1>
    <p>
      <%= image_fu @project.hero_image, '1200x600c' %>
      <%#= image_tag @project.hero_image.url %>
    </p>
  </section>
  <section>
    <h1>Excerpt</h1>
    <p>
      <%=raw @project.excerpt %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @project.description %>
    </p>
  </section>
  <section>
    <h1>Testimonial</h1>
    <p>
      <%=raw @project.testimonial %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @project.category_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.title, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%#= render '/refinery/content_page' %>

<div class="container-fluid" id="l2-main">
  <div class="row">
    <div class="col-md-12">


      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1><%= raw @project.title %></h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            
            <%= raw @project.description %>
          <%#= render '/refinery/content_page' %>
          </div>
          <div class="col-md-6">
            <%= image_fu @project.hero_image, '1200x600#c', class: 'img-responsive' %>
            <div class="row" style="margin-left:0px;margin-top:15px;">

              <% @project.images.each do |i| %>
              <div class="col-md-2" style="padding-left:0;">
                <%= image_fu i, '100x100#c', class: 'img-responsive' %>
              </div>
                <%#= image_tag i.url, class: 'img-responsive' %>
              <% end %>


            </div>
            
            <div class="address">
              <p>200 Twilite Street<br />
                La Crescent, MN 55947<br />
                507-895-8903<br />
                Fax 507-895-8438<br />
                info@wieserbrothers.com</p>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



