<% content_for :body do %>
  <ul id="projects">
    <% @projects.each do |project| %>
      <li>
        <%= link_to project.title, refinery.projects_project_path(project) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%#= render '/refinery/content_page' %>



<div class="container-fluid" id="l2-main">
  <div class="row">
    <div class="col-md-12">



      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1>Projects</h1>

          </div>

        </div>
        <div class="row">
          <div class="col-md-6">
            
            <%#= @page.content_for(:body).html_safe %>
            <div class="row">
              <% @categories.each do |c| %>
                <% if c.projects.present? %>
                  <div class="col-md-3 col-xs-6 projects text-center">
                    <!-- Get sample project from category -->
                    <% sample_proj = c.projects.sample %>
                    <!-- Show sample image -->
                    <%= image_fu sample_proj.hero_image, '120x120#c' %>
                    <p><%= link_to c.name, refinery.categories_category_path(c) %></p>
                  </div>
                <% end %>
              <% end %>
            </div>
            
              
            
          </div>
          <div class="col-md-6">
            <% @page.images.each do |i| %>
              <%= image_tag i.url, class: 'img-responsive' %>
            <% end %>
            <%= render '/refinery/address' %>
        
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render '/refinery/buckets' %>



