<%= form_for [refinery, :testimonials_admin, @testimonial] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @testimonial,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class="field">
    <%= f.label :testimonial_type %>
    <%= f.select :testimonial_type, ['Client', 'Employee'], :prompt => 'Select Testimonial Type' %>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:testimonial_text],
                :object => "testimonials/testimonial" -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @testimonial.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :client -%>
    <%= f.text_field :client -%>
  </div>

  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.testimonials.admin.testimonials.testimonial'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @testimonial.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
