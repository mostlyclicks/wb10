<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-12 text-right">

      <%= form_tag refinery.search_path, class: 'form-inline' do -%>
        <div class="form-group">
          <%= text_field_tag :query, {}, {:type => "search",
                             :placeholder => "Search",
                             :class => 'form-control input-sm',
                             :style => 'padding-top:5px;',
                             :value => (params[:query] if params[:query])} %>
        </div>
        <%= submit_tag 'Go', class: 'btn btn-default input-sm search-btn' %>
      <% end %>
  </div>
